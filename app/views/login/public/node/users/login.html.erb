<div class="contentPublicLogin">
<%= form_tag "#{Page.current_node.public_uri}login", method: :post do -%>
<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
  <div class="fields">
    <label for="account">ユーザーID</label><%= text_field_tag :account, nil, placeholder: 'ユーザーID', title: 'ユーザーID' %><br />
    <label for="password">パスワード</label><%= password_field_tag :password, nil, placeholder: 'パスワード', title: 'パスワード' %>
  </div>
  <div class="submitters">
    <%= submit_tag 'ログイン' %>
  </div>
<%- end -%>
</div>
